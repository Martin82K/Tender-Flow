{
  "name": "crm-mcp-bridge",
  "version": "1.0.0",
  "description": "MCP Bridge Server for CRM DocHub - enables local filesystem access",
  "main": "index.js",
  "bin": "index.js",
  "pkg": {
    "targets": [
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "build": "pkg . --compress GZip",
    "build:mac": "pkg . --target node18-macos-x64,node18-macos-arm64 --compress GZip",
    "build:win": "pkg . --target node18-win-x64 --compress GZip"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}