{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./main",
        "declaration": false,
        "resolveJsonModule": true,
        "lib": [
            "ES2022"
        ]
    },
    "include": [
        "main/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}